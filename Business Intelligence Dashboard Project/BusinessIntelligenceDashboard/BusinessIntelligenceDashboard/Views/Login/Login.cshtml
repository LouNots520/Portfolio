@model BusinessIntelligenceDashboard.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width">

    <title>BID - Login</title>

    <link rel="stylesheet" href="~/Content/CSS/Login.css">

</head>

<body>
    <div class="blue-bar">
        <div class="clouds">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <div id="clouds_02"><img src="~/Content/Images/cloud_02.png" style="padding-left:5em;" /></div>
                        <div id="clouds_01"><img src="~/Content/Images/cloud_01.png" style="padding-left:10em; padding-top:3em;" /></div>
                        <div class="login-card">
                            <h1>
                                <a href="https://www.docuware-online.com"><img src="~/Content/Images/logo.png" alt="Docuware Logo" /></a>
                            </h1><br>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.organization, new { htmlAttributes = new { @class = "form-control", @placeholder = "Organization" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "Password", @placeholder = "Password" } })
                                        </div>
                                    </div>

                                    <div id="FailMsg" class="col-md-10">
                                        @ViewBag.FailedMsg
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Login" class="login login-submit" />
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="login-help">
                                <a href="https://www.docuware-online.com/register">Register</a> • <a href="https://www.docuware.com/user/password">Forgot Password</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
